#################
# plugins
#################
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-pain-control'
set -g @plugin 'christoomey/vim-tmux-navigator'
set -g @plugin 'fcsonline/tmux-thumbs'

#################
# better defaults
#################
set -g  default-terminal 'alacritty'
set -sg terminal-overrides ",*:RGB"
setw -q -g utf8 on

set -s  escape-time 0
set -g  repeat-time 0
set -g  history-limit 5000
set -g  display-time 4000
set -g  base-index 1
setw -g pane-base-index 1
set -g  mouse on

set -g set-titles on
setw -g automatic-rename on
set -g renumber-windows on

set -g focus-events on
setw -g aggressive-resize on
setw -g monitor-activity on
setw -g monitor-bell on
setw -g clock-mode-style 24

#################
# key bindings
#################
# open new panes on current path
bind c new-window -c '#{pane_current_path}'

# better split defaults
unbind '"'
unbind %
bind | split-window -h
bind - split-window -v

# window navigation
unbind n
unbind p
bind -r C-h previous-window
bind -r C-l next-window

# pane navigation
bind -r h select-pane -L
bind -r j select-pane -D
bind -r k select-pane -U
bind -r l select-pane -R
bind > swap-pane -D
bind < swap-pane -U

# reload tmux config
bind R source-file ~/.tmux.conf \;

# no jump to end when select
unbind -T copy-mode-vi MouseDragEnd1Pane
bind-key -T copy-mode-vi y send-keys -X copy-selection

#################
# status line
#################
set -g  status on
set -g  status-interval 60
set -gq status-utf8 on

set  -g visual-activity off
set  -g visual-bell off
set  -g visual-silence off
setw -g monitor-activity off
set  -g bell-action none

setw -g clock-mode-colour green
setw -g mode-style 'fg=red bg=black bold'
set  -g pane-border-style 'fg=black'
set  -g pane-active-border-style 'fg=black'
set  -g status-position bottom
set  -g status-justify left
set  -g status-style 'bg=black fg=white'
set  -g status-left ''
set  -g status-right ' #[fg=white,bg=black] %H:%M '
set  -g status-right-length 50
set  -g status-left-length 20
setw -g window-status-style 'fg=white bg=black'
setw -g window-status-format ' #I:#W#F '
setw -g window-status-current-style 'fg=black bg=white'
setw -g window-status-current-format ' #I:#W#F '
setw -g window-status-bell-style 'fg=black bg=yellow'

set -g message-style 'fg=black bg=white bold'

########################
# tmux plugin manager
########################
run '~/.tmux/plugins/tpm/tpm'
