[user]
	name = Lucas Trevisan
	email = lucastrvsn@gmail.com
[core]
  editor = nvim
  pager = less -MR
  mergeoptions = --no-edit
  commitGraph = true
  excludefiles = ~/.gitignoreglobal
[color]
  ui = true
[log]
  decorate = auto
  abbrevCommit = true
[status]
  short = true
  branch = false
[commit]
  template = ~/.gitmessage
[pull]
  rebase = true
  ff = only
[rebase]
  autoStash = true
  autoSquash = true
[push]
  default = current
[fetch]
  prune = true
  pruneTags = true
[rerere]
  enabled = 1
[alias]
  aliases = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\ \t => \\2/' | sort
  branches = branch -a --sort=-authordate --no-pager
  stashes = stash list
  sync = !git fetch && git pull origin $(git rev-parse --abbrev-ref HEAD)
  publish = "!git push origin $(git symbolic-ref --short HEAD) -u"
  main = "!git checkout $(basename $(git symbolic-ref --short refs/remotes/origin/HEAD))"
  remotes = remote -v
  unstage = reset -q HEAD --
  uncommit = reset --mixed HEAD~
  lg = log --graph --abbrev-commit --decorate --format=format:'%C(yellow)%h%C(reset) %C(white)%s%C(reset) %C(dim white)-%C(reset) %ar %C(dim white)<%an>%C(reset)%C(auto)%d%C(reset)' --all
  details = log -n1 -p --format=fuller
[init]
  defaultBranch = main
